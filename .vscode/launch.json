{
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ng serve - App",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "npm: start - portfolio-app", 
            "url": "http://localhost:4200/",
            "cwd": "${workspaceFolder}\\portfolio-app\\src"
        },
        {
            "name": "ng verbose - App",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "npm: start:verbose - portfolio-app", 
            "url": "http://localhost:4200/",
            "cwd": "${workspaceFolder}\\portfolio-app\\src"
        },
        {
            "name": "ng test - App",
            "type": "chrome",
            "pathMapping": {},
            "request": "launch",
            "preLaunchTask": "npm: test",
            "url": "http://localhost:9876/debug.html",
            "cwd": "${workspaceFolder}\\portfolio-app\\src"
        },
        {
            "command": "npm start",
            "name": "npm start - Server",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}\\portfolio-server\\src"
        }
    ]
}